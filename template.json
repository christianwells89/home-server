{
    "version": "2",
    "templates": [
        {
            "type": 3,
            "name": "AdGuard",
            "title": "AdGuard",
            "description": "DNS-level ad-blocking",
            "env": [
                {
                    "label": "Path to the data location's parent directory",
                    "name": "DATA_PARENT_PATH"
                },
                {
                    "label": "Server Domain",
                    "name": "SERVER_DOMAIN",
                    "default": "home.arpa"
                }
            ],
            "logo": "https://raw.githubusercontent.com/christianwells89/home-server/main/stacks/adguard/logo.png",
            "platform": "linux",
            "repository": {
                "stackfile": "stacks/adguard/docker-compose.yml",
                "url": "https://github.com/christianwells89/home-server"
            }
        },
        {
            "type": 3,
            "name": "Arr",
            "title": "Arr",
            "description": "Complete media downloading and managing solution",
            "env": [
                {
                    "label": "Path to the data location's parent directory",
                    "name": "DATA_PARENT_PATH"
                },
                {
                    "label": "OpenVPN Configs",
                    "name": "OPENVPN_CONFIG"
                },
                {
                    "label": "PIA Username",
                    "name": "OPENVPN_USERNAME"
                },
                {
                    "label": "PIA Password",
                    "name": "OPENVPN_PASSWORD"
                },
                {
                    "label": "Server Domain",
                    "name": "SERVER_DOMAIN",
                    "default": "home.arpa"
                },
                {
                    "label": "Local Timezone",
                    "name": "TZ",
                    "default": "US/New_York"
                }
            ],
            "logo": "https://raw.githubusercontent.com/christianwells89/home-server/main/stacks/arr/logo.png",
            "platform": "linux",
            "repository": {
                "stackfile": "stacks/arr/docker-compose.yml",
                "url": "https://github.com/christianwells89/home-server"
            }
        },
        {
            "type": 3,
            "name": "Kodi DB",
            "title": "Kodi DB",
            "description": "Database for Kodi",
            "env": [
                {
                    "label": "MySQL Root Password",
                    "name": "MYSQL_ROOT_PASSWORD"
                }
            ],
            "logo": "https://raw.githubusercontent.com/christianwells89/home-server/main/stacks/kodi-db/logo.png",
            "platform": "linux",
            "repository": {
                "stackfile": "stacks/kodi-db/docker-compose.yml",
                "url": "https://github.com/christianwells89/home-server"
            }
        },
        {
            "type": 3,
            "name": "Heimdall",
            "title": "Heimdall",
            "description": "Landing page for the home server.",
            "env": [
                {
                    "label": "Path to the data location's parent directory",
                    "name": "DATA_PARENT_PATH"
                },
                {
                    "label": "Server Domain",
                    "name": "SERVER_DOMAIN",
                    "default": "home.arpa"
                }
            ],
            "logo": "https://raw.githubusercontent.com/christianwells89/home-server/main/stacks/heimdall/logo.png",
            "platform": "linux",
            "repository": {
                "stackfile": "stacks/heimdall/docker-compose.yml",
                "url": "https://github.com/christianwells89/home-server"
            }
        }
    ]
}